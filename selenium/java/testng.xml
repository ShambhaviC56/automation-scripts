<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Java POM Test Suite" verbose="1" parallel="methods" thread-count="1">
    
    <!-- Test Configuration -->
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    
    <!-- Listeners for reporting -->
    <listeners>
        <listener class-name="org.testng.reporters.JUnitXMLReporter"/>
    </listeners>
    
    <!-- Test Groups -->
    <test name="Salesforce Tests">
        <packages>
            <package name="tests.*"/>
        </packages>
    </test>
    
</suite>
